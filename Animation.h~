#pragma once

class CAnimation
{
public:
  CAnimation(CDC* pDC);
  ~CAnimation(void);

public:
  CDC *m_pDC;
  CDC memBkg, memMask, memBmp;
  int m_cx, m_cy; // small
  int m_Width, m_Height; // background
  int m_x, m_y; // animation coordination
  int m_stepX, m_stepY; // coin move stride
  int m_no, m_count; // tag of animation

public:
  void Init();
  void MoveBmp();
  void NextStep();
};
